        \
        for(int i=0;i<arr.length;i++)\
        \{\
            int currentW=(int)arr[i].weight;\
            int currentP=(int)arr[i].profit;\
            if(c-currentW>=0)\
            \{   \
                c-=currentW;\
                result+=currentP;\
            \}\
            \
            else\
            \{\
                //fetch the fraction\
                double f=((double)c/(double)currentW);\
                result+=(f*currentP);\
                c=(int)(c-(f*currentW));\
                \
                break;\
            \}\
        \}\
        \
        \
        return result;\
        \
    \}\
