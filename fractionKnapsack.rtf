    static double getMaxValue(Item arr[],int c)\
    \{\
        Arrays.sort(arr, new Comparator<Item>()\{\
            public int compare(Item s1, Item s2)\
            \{\
                double c1=new Double((double)s1.profit/(double)s1.weight);\
                double c2=new Double((double)s2.profit/(double)s2.weight);\
